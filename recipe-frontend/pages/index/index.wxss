.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.search-box:active {
  transform: scale(0.98);
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #666;
}

.recipe-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.recipe-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.recipe-item:active {
  transform: scale(0.98);
}

.recipe-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.recipe-info {
  padding: 16rpx;
}

.recipe-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
}

.tag {
  background: linear-gradient(135deg, #fff8f0 0%,rgb(255, 255, 255) 100%);
  color:rgb(135, 152, 138);
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  line-height: 1.2;
  font-weight: 500;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.tag::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s ease;
}

.tag:active::before {
  left: 100%;
}

.tag:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(253, 203, 110, 0.3);
}

.load-more {
  text-align: center;
  padding: 40rpx 0;
  color: #666;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.load-more:active {
  background-color: #f5f5f5;
}

.upload-section {
  background: #fff;
  border-radius: 16rpx;
  margin-top: 40rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.form-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #4a7c59;
}

.form-group {
  margin-bottom: 24rpx;
}

.upload-preview {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-top: 12rpx;
  border: 1rpx solid #eee;
  object-fit: cover;
}

.upload-fab {
  position: fixed;
  left: 50%;
  bottom: 60rpx;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background: #4a7c59;
  color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 36rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.15);
  z-index: 99;
}

.plus {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 12rpx;
}

.upload-text {
  font-size: 28rpx;
  font-weight: 500;
}