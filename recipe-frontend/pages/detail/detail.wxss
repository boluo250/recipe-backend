.container {
  padding: 20rpx;
}
.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.detail-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
  text-align: center;
}
.detail-content {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}
.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  margin-top: 30rpx;
}
.section-title:first-child {
  margin-top: 0;
}
.ingredients {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}
.steps {
  font-size: 28rpx;
  line-height: 1.6;
}
.tips {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  font-style: italic;
}